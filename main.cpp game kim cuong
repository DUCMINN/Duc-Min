#include <SFML/Graphics.hpp>
#include "Game.h"

int main() {
    srand(time(0));
    RenderWindow app(VideoMode(720, 480), "Game Kim Cuong", Style::Close);
    app.setVerticalSyncEnabled(true);
    app.setFramerateLimit(270);

    Game game;
    
    // Game loop
    while (app.isOpen()) {
        sf::Event e;
        while (app.pollEvent(e)) {
            game.handleEvents(e, app);
        }

        game.update(app.getClock().getElapsedTime().asSeconds());
        game.render(app);

        app.display();
    }

    return 0;
}
